{
  "ConnectionStrings": {
    "DefaultConnectionString": "Your connection string"
  },
  "SwaggerSettings": {
    "version": "v1.0",
    "Title": "Edulingual API",
    "Description": "Edulingual API",
    "TermsOfServiceUrl": "https://www.example.com",
    "ContactName": "Edulingual",
    "ContactUrl": "https://github.com/h0-hi3u",
    "LicenseName": "No license",
    "LicenseUrl": "https://www.example.com",
    "Options": {
      "Servers": [
        {
          "Url": "https://localhost:10000",
          "Description": "Local server for Edulingual API",
          "Variables": []
        }
      ],
      "SecurityScheme": {
        "Name": "Authorization",
        "Description": "JWT authentication with .NET Identity",
        "Type": "ApiKey",
        "Location": "Header"
      },
      "SecurityRequirement": {
        "Type": "SecurityScheme",
        "Id": "Authorization"
      }
    }
  },
  "AllowedHosts": "*",
  "CorsSettings": {
    "AllowedOrigins": "Your client IP",
    "AllowedMethods": "*",
    "AllowedHeaders": "*",
    "AllowedCredentials": true
  },
  "JwtSettings": {
    "Issuer": "Server host",
    "Audience": "Client host",
    "SigningKey": "Your key",
    "ValidateAudience": true,
    "ValidateIssuer": true,
    "ValidateIssuerSigningKey": true,
    "ValidateLifetime": true,
    "AccessTokenLifetimeInMinutes": 60,
    "RefreshTokenLifetimeInMinutes": 480
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
